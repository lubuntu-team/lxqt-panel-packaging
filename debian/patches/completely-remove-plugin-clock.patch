-        case ILXQtPanel::PositionTop:
-        case ILXQtPanel::PositionBottom:
-            origin = Qt::TopLeftCorner;
-            break;
-
-        case ILXQtPanel::PositionLeft:
-            origin = Qt::BottomLeftCorner;
-            break;
-
-        case ILXQtPanel::PositionRight:
-            origin = Qt::TopRightCorner;
-            break;
-        }
